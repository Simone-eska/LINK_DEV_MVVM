<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:layout_margin="@dimen/_20sdp"
        android:tag="@string/app_name"
        android:id="@+id/explore_frag"
        android:layout_gravity="center"
        android:name="com.example.viewmodeltest.explore.view.ExploreFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_explore" />
    <!--<include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <fragment
        android:id="@+id/navigation_drawer"
        android:layout_gravity="start"
        android:name="com.example.viewmodeltest.home.view.navDrawer.NavigationDrawerFragment"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="match_parent"
        tools:layout="@layout/nav_drawer" />

</android.support.v4.widget.DrawerLayout>


</LinearLayout>